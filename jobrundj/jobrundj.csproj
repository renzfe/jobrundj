  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\jobmodeldj\jobmodeldj.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="jobs\readme.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
